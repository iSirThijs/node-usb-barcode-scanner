{
  "name": "@isirthijs/barcode-scanner",
  "version": "1.1.0",
  "description": "A simple wedge barcode scanner module with support for the shift modifier key",
  "main": "index.js",
  "scripts": {
    "test": "sudo node ./test-utils/test.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iSirThijs/node-usb-barcode-scanner.git"
  },
  "author": "Thijs Spijker",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iSirThijs/node-usb-barcode-scanner/issues"
  },
  "homepage": "https://github.com/iSirThijs/node-usb-barcode-scanner#readme",
  "dependencies": {
    "node-hid": "^0.7.8"
  },
  "devDependencies": {
    "dotenv": "^8.0.0",
    "eslint": "^5.16.0"
  },
  "eslintIgnore": [
    "node_modules/"
  ],
  "eslintConfig": {
    "env": {
      "browser": false,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        "tab"
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  }
}
